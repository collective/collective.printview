<?xml version="1.0"?>
<object name="portal_controlpanel" 
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="collective.printview"
        purge="False">

  <configlet
    title="Configure Printview" action_id="printview"
    appId="collective.printview" category="Products"
    condition_expr=""
    url_expr="string:${portal_url}/@@printview-settings"
    visible="True"
    icon_expr="string:$portal_url/++resource++printview.png">
      <permission>Manage portal</permission>
  </configlet>
</object>
